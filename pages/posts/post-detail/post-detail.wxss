.container{
  display: flex;
  flex-direction: column;
}
.content{
  padding: 20rpx;
}
.head-image{
  height: 460rpx;
  width: 100%;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  transform:translateX(-50%);
  top: 180rpx;
  opacity: 0.6;
}
.author-date{
  flex-direction: row;
  margin: 20rpx 0;
}
.avatar{
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}
.author{
  font-size: 16px;
  font-weight: 400;
  color: #666;
  margin-left: 20rpx;
}
.const-text{
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}
.title{
  font-size: 36rpx;
  color: #4b556c;
  font-weight: 700;
  letter-spacing: 2px;
  margin-left: 10rpx;
}
.tool{
  margin-top: 20rpx;
  margin-left: 20rpx;
}
.circle-img{
  float:right;
  margin-right: 20rpx;
  vertical-align: middle;
}
.circle-img image{
  width:90rpx;
  height: 90rpx;
}
.share-img{
  margin-left: 30rpx;
}
.horizon{
  width: 90%;
  height: 1px;
  background: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:46rpx;
  margin: 0 atuo;
  z-index: -99;
}
.detail{
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
.clearfix::after{
  content: ""; display: block; height: 0; clear: both; visibility: hidden;
}